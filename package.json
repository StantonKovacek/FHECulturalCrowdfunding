{
  "name": "cultural-crowdfunding-platform",
  "version": "1.0.0",
  "description": "Privacy-preserving crowdfunding platform for cultural projects with FHE technology",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "coverage": "hardhat coverage",
    "deploy": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "verify": "hardhat run scripts/verify.js --network sepolia",
    "interact": "hardhat run scripts/interact.js --network sepolia",
    "simulate": "hardhat run scripts/simulate.js --network sepolia",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "lint": "npm run lint:sol && npm run lint:js && npm run prettier:check",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:js": "eslint scripts/ test/ --ext .js",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix && eslint scripts/ test/ --ext .js --fix",
    "prettier:check": "prettier --check '**/*.{js,json,md,sol}'",
    "prettier:write": "prettier --write '**/*.{js,json,md,sol}'",
    "security-audit": "node scripts/security-audit.js",
    "prepare": "husky install",
    "size": "hardhat size-contracts"
  },
  "keywords": [
    "blockchain",
    "crowdfunding",
    "fhe",
    "privacy",
    "ethereum",
    "hardhat",
    "solidity",
    "cultural-projects"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "hardhat": "^2.22.0",
    "solhint": "^5.0.0",
    "prettier": "^3.2.0",
    "prettier-plugin-solidity": "^1.3.0",
    "solidity-coverage": "^0.8.0"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.5.0",
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.4.0",
    "ethers": "^6.11.0"
  }
}
